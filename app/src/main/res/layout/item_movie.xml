<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        style="@style/CardViewStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/item_iv_poster"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:transitionName="transitionName" />

            <TextView
                android:id="@+id/item_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/item_iv_poster"
                android:singleLine="true"
                android:text="@string/movie.title" />

            <TextView
                android:id="@+id/item_tv_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_tv_title"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/item_iv_poster"
                android:text="@string/movie.language" />

            <TextView
                android:id="@+id/item_tv_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_tv_language"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/item_iv_poster"
                android:text="@string/movie.vote" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>