<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/iv_reviewer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_people"/>

    <TextView
        android:id="@+id/tv_reviewer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_reviewer"
        android:layout_alignTop="@+id/iv_reviewer"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/iv_reviewer"
        android:gravity="center"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_reviewer_name"
        android:layout_below="@+id/tv_reviewer_name"
        />
</RelativeLayout>